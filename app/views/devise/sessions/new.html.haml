.col-md-8.col-md-offset-2
  %h2.text-center Sign in
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      .checkbox
        / = f.input_field :remember_me, as: :boolean, inline_label: 'Remember me' if devise_mapping.rememberable?
        = f.input :remember_me, as: :boolean, inline_label: 'Remember me' if devise_mapping.rememberable?
    .form-actions
      / = f.button :submit, "Log in"
      = f.button :submit, "Log in", class: 'btn btn-primary'
  = render "devise/shared/links"

